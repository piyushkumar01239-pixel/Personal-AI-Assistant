import os
import speech_recognition as sr
import pyttsx3
import random

# Initialize text-to-speech engine
engine = pyttsx3.init()

def speak(text):
    print("Assistant:", text)
    engine.say(text)
    engine.runAndWait()

def listen():
    r = sr.Recognizer()
    with sr.Microphone() as source:
        print("\nListening...")
        audio = r.listen(source)

    try:
        command = r.recognize_google(audio).lower()
        print("You said:", command)
        return command
    except sr.UnknownValueError:
        speak("Sorry, I didn't catch that.")
        return ""
    except sr.RequestError:
        speak("Sorry, there's a problem with the speech service.")
        return ""

# Music playlist
music_videos = [
    "https://youtu.be/HexFqifusOk?si=soo5uf_oWTq_J9n1",
    "https://youtu.be/pKwNDsBxXRA?si=XX2QI7ESC--zMd6_",
    "https://youtu.be/-4JV4hur1PM?si=6XTe7KR9CDNhtbgt",
    "https://youtu.be/sZfnwayum2M?si=psodTixazBxYtMQl",
    "https://youtu.be/Irw8llgSC3s?si=uU4HM6vVSMFYpY_x",
    "https://youtu.be/Nnop2walGmM?si=qCLUBPeb3UrKlgvs"
]

speak("Voice assistant is ready. Please say a command!")

# Main loop
while True:
    command = listen()

    if not command:
        continue

    if "shutdown" in command:
        speak("Shutting down the computer.")
        os.system("shutdown /s /t 5")
        break

    elif "restart" in command:
        speak("Restarting the computer.")
        os.system("shutdown /r /t 5")
        break

    elif "lock" in command:
        speak("Locking the computer.")
        os.system("rundll32.exe user32.dll,LockWorkStation")

    elif "exit" in command or "quit" in command:
        speak("Exiting the assistant. Goodbye!")
        break

    elif "open chrome" in command:
        speak("Opening Chrome.")
        os.system("start chrome")

    elif "open youtube" in command:
        speak("Opening YouTube.")
        os.system("start chrome https://www.youtube.com")

    elif "open whatsapp" in command:
        speak("Opening WhatsApp.")
        os.system('start shell:AppsFolder\\5319275A.WhatsAppDesktop_cv1g1gvanyjgm!App')

    elif "open telegram" in command:
        speak("Opening Telegram Web.")
        os.system("start chrome https://web.telegram.org")

    elif "open folder" in command:
        folder_path = "C:\\Users\\HP\\Documents"  
        speak(f"Opening folder: {folder_path}")
        os.system(f'start "" "{folder_path}"')

    elif "play music" in command:
        video = random.choice(music_videos)
        speak("Playing a random music video for you.")
        os.system(f"start chrome {video}")

    elif "play" in command:
        search_term = command.replace("play", "").strip()
        if search_term:
            speak(f"Searching for {search_term} on YouTube.")
            url = f"https://www.youtube.com/results?search_query={search_term.replace(' ', '+')}"
            os.system(f"start chrome {url}")
        else:
            speak("Please say what you want me to play.")

    else:
        speak("Sorry, I don't understand that command.")
